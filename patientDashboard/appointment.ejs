<%- include("includes/header"); -%>

<div class="col-sm-9 col-md-10 mt-5">
  <form class="mx-5" action="" method="POST">
    <div class="form-group">
      <label for="inputPatientInfo">Deatils of Patient</label>
      <input type="text" class="form-control" id="inputPatientInfo" placeholder="Appointment Info" name="requestInfo" required>
    </div>
    <div class="form-group">
      <label for="inputPatientDescription">Description</label>
      <input type="text" class="form-control" id="inputPatientDescription" placeholder="Write Description" name="appointmentDesc" required>
    </div>
    <div class="form-group">
      <label for="inputName">Name</label>
      <input type="text" class="form-control" id="inputName" placeholder="Nikhil" name="patientName" required>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputSymptoms">Symptoms</label>
        <input type="text" class="form-control" id="inputSymptoms" placeholder="Cough" name="symptoms" required>
      </div>
      <div class="form-group col-md-6">
        <label for="inputPastIllness">Past Illness/Allergies</label>
        <input type="text" class="form-control" id="inputPastIllness" placeholder="Asthama" name="pastIllness" required>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-4">
        <label for="inputYear">Year</label>
        <input type="text" class="form-control" id="inputYear" name="patientYear" onkeypress="isInputNumber(event)" required>
      </div>
      <div class="form-group col-md-4">
        <label for="inputBranch">Branch</label>
        <input type="text" class="form-control" id="inputBranch" name="patientBranch" required>
      </div>
      <div class="form-group col-md-4">
        <label for="inputID">ID</label>
        <input type="text" class="form-control" id="inputRollNo" name="patientID" onkeypress="isInputNumber(event)" required>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputEmail">Email</label>
        <input type="email" class="form-control" id="inputEmail" placeholder="Official E-mail" name="patientEmail" required>
      </div>
      <div class="form-group col-md-2">
        <label for="inputMobile">Mobile</label>
        <input type="text" class="form-control" id="inputMobile" name="patientMobile" onkeypress="isInputNumber(event)" required>
      </div>
      <div class="form-group col-md-2">
        <label for="inputDate">Date</label>
        <input type="date" class="form-control" id="inputDate" name="appointmentDate" required>
      </div>
    </div>

    <button type="submit" class="btn btn-primary" name="submitRequest">Submit</button>
    <button type="reset" class="btn btn-secondary">Reset</button>
  </form>

</div>
</div>
</div>
<!-- Only Number for input fields -->
<script>
  function isInputNumber(evt) {
    var ch = String.fromCharCode(evt.which);
    if (!(/[0-9]/.test(ch))) {
      evt.preventDefault();
    }
  }
</script>

