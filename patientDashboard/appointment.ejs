<%- include("includes/header"); -%>

<div class="col-sm-9 col-md-10 mt-5">
  <form class="mx-5" action="" method="POST">
    <div class="form-group">
      <label for="patientName">Name</label>
      <input type="text" class="form-control" id="patientName" placeholder="Nikhil" name="patientName" required>
    </div>
    <div class="form-row">
      <div class="form-group col-md-4">
        <label for="patientYear">Year</label>
        <input type="text" class="form-control" id="patientYear" name="patientYear" onkeypress="isInputNumber(event)" required>
      </div>
      <div class="form-group col-md-4">
        <label for="patientBranch">Branch</label>
        <input type="text" class="form-control" id="patientBranch" name="patientBranch" required>
      </div>
      <div class="form-group col-md-4">
        <label for="patientID">ID</label>
        <input type="text" class="form-control" id="patientID" name="patientID" onkeypress="isInputNumber(event)" required>
      </div>
    </div>
    <div class="form-group">
      <label for="appointmentDesc">Description</label>
      <input type="text" class="form-control" id="appointmentDesc" placeholder="Write Description" name="appointmentDesc" required>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="symptoms">Symptoms</label>
        <input type="text" class="form-control" id="symptoms" placeholder="Cough" name="symptoms" required>
      </div>
      <div class="form-group col-md-6">
        <label for="pastIllness">Past Illness/Allergies</label>
        <input type="text" class="form-control" id="pastIllness" placeholder="Asthama" name="pastIllness" required>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="patientEmail">Email</label>
        <input type="email" class="form-control" id="patientEmail" placeholder="Official E-mail" name="patientEmail" required>
      </div>
      <div class="form-group col-md-2">
        <label for="patientMobile">Mobile</label>
        <input type="text" class="form-control" id="patientMobile" name="patientMobile" onkeypress="isInputNumber(event)" required>
      </div>
      <div class="form-group col-md-2">
        <label for="appointmentDate">Date</label>
        <input type="date" class="form-control" id="appointmentDate" name="appointmentDate" required>
      </div>
    </div>

    <button type="submit" class="btn btn-primary" name="submitRequest">Submit</button>
    <button type="reset" class="btn btn-secondary">Reset</button>
  </form>

</div>
</div>
</div>
<!-- Only Number for input fields -->
<script>
  function isInputNumber(evt) {
    var ch = String.fromCharCode(evt.which);
    if (!(/[0-9]/.test(ch))) {
      evt.preventDefault();
    }
  }
</script>
</div>

<%- include("includes/footer"); -%>
